<section>
  <div class="container-fluid py-5">

    <div class="row">

      <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">

        <h5 class="font-weight-bold mb-3 text-center text-lg-start">Conversations</h5>

        <div class="card">
          <div class="card-body">

            <%= turbo_stream_from :conversations %>
            <ul id="conversations" class="list-unstyled mb-0">
              <%= render partial: "conversations/conversation", collection: @conversations %>
            </ul>

          </div>
        </div>

      </div>

      <div class="col-md-6 col-lg-7 col-xl-8 vh-100">

        <%= turbo_stream_from :messages %>
        <ul id="messages" class="h-75 flex-column list-unstyled overflow-scroll">
          <%= render @messages %>
          <li id="messages_anchor"></li>
        </ul>
        <%= render "messages/form" %>
      </div>
    </div>

  </div>
</section>
